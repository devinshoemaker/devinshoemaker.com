    "@fortawesome/react-fontawesome": "^0.2.0",
    "autoprefixer": "^10.4.19",
    "date-fns": "^2.30.0",
    "eslint-config-next": "^13.5.6",
    "gray-matter": "^4.0.3",
    "next": "^13.5.6",
    "next-mdx-remote": "^4.4.1",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.2",
    "tailwindcss": "^2.2.19"
