    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^4.3.8",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.3.1",
    "typescript": "4.9.5"
